extends ../layout
block scripts
	script(type='text/javascript').
		window.recomendedCurrency = '#{recomendedCurrency}'
		window.abCurrencyFlag = '#{abCurrencyFlag}'
block content
	.content-alt
		.content.plans(ng-controller="PlansController")
			.container
				.row
					.col-md-12
						.page-header.centered.plans-header.text-centered
							h1(ng-cloak) #{translate("start_x_day_trial", {len:'{{trial_len}}'})}
				.row
					.col-md-8.col-md-offset-2
						p.text-centered
							| DataJoy is world's easiest platform for your data analysis in Python and R.
							| Access your code &amp; data from anywhere in the world, and share your
							| work with your collaborators without them needing to install anything extra.

				.row(ng-cloak)
					.col-md-6.col-md-offset-3
						ul.nav.nav-pills
							li(ng-class="{'active': ui.view == 'monthly'}")
								a(
									href,
									ng-click="switchToMonthly()"
								) #{translate("monthly")}
							li(ng-class="{'active': ui.view == 'annual'}")
								a(
									href
									ng-click="switchToAnnual()"
								) #{translate("annual")}

					.col-md-2.text-right
						.dropdown.currency-dropdown(dropdown)
							a.btn.btn-default.dropdown-toggle#currenyDropdown(
								href="#",
								data-toggle="dropdown",
								dropdown-toggle
							)
								| {{currencyCode}} ({{plans[currencyCode]['symbol']}}) 
								span.caret

							ul.dropdown-menu.dropdown-menu-right.text-right(role="menu")
								li(ng-repeat="(currency, value) in plans")
									a(
										href,
										ng-click="changeCurreny(currency)"
									) {{currency}} ({{value['symbol']}})

				.row(ng-cloak)
					.col-md-10.col-md-offset-1
						.row
							.text-centered(ng-if="ui.view == 'monthly' || ui.view == 'annual'")
								.col-md-6
									.card
										.card-header
											h2 Basic
										.circle #{translate("free")} 
										ul.list-unstyled
											li Only one collaborator
											li Low CPU priority
											li 256Mb Memory
											li 1 minute script timeout
											li
												br
												a.btn.btn-info(href="/register") #{translate("sign_up_now")}
								.col-md-6
									.card
										.card-header
											h2 Researcher
										.circle
											span(ng-if="ui.view == 'monthly'")
												| {{plans[currencyCode]['datajoy']['monthly']}}
												span.small /mo
											span(ng-if="ui.view == 'annual'")
												| {{plans[currencyCode]['datajoy']['annual']}}
												span.small /yr
											div.exc-tax (Exc. tax)
										ul.list-unstyled
											li
												strong Unlimited Collaborators
											li
												strong High CPU priority
											li
												strong 2GB Memory
											li #{translate("sync_to_dropbox")}
											li #{translate("sync_to_github")}
											li Full version history
											li
												br
												a.btn.btn-info(
													ng-href="#{baseUrl}/user/subscription/new?planCode=datajoy{{ ui.view == 'annual' ? '-annual' : '' }}&currency={{currencyCode}}", ng-click="signUpNowClicked('collaborator')"
												)
													span(ng-show="ui.view != 'annual'") #{translate("start_free_trial")}
													span(ng-show="ui.view == 'annual'") #{translate("buy_now")}

				.row.row-spaced(ng-cloak)
					p.text-centered Choose the plan that works for you with our 7-day free trial. Cancel at any time, and get a full 30-day refund if you're unhappy for any reason.

	.border-top
		.content
			.container
				.row
					.col-md-3
						h3 GROUPS
					.col-md-7
						p
							strong Large Group?
						p Get DataJoy accounts for your whole organisation.
					.col-md-2
						p.row-spaced-small
							a.btn.btn-info.js-intercom(href="#") Get in Touch

	.pattern-container.border-top
		.content
			.container
				.row
					.col-md-3
						h3 EDUCATION
					.col-md-7
						p
							strong Teaching with Python or R?
						p
							| Get DataJoy accounts for you and your students.
					.col-md-2
						p.row-spaced-small
							a.btn.btn-info.js-intercom(href="#") Get in Touch

	.border-top
		.content
			.container
				.row
					.col-md-3
						h3 ENTERPRISE
					.col-md-7
						p
							strong Sensitive Data?
						p Run DataJoy locally on your own servers.
					.col-md-2
						p.row-spaced-small
							a.btn.btn-info.js-intercom(href="#") Get in Touch

	.content-alt.border-top
		.content
			.container
				.row
					.col-md-12
						.page-header.plans-header.plans-subheader.text-centered
							h2 #{translate("enjoy_these_features")}
					.col-md-4
						.card.features.text-centered
							i.fa.fa-file-text-o.fa-5x
							h4 #{translate("unlimited_projects")}
							p #{translate("create_unlimited_projects")}
					.col-md-4
						.card.features.text-centered
							i.fa.fa-clock-o.fa-5x
							h4 #{translate("full_doc_history")}
							p #{translate("never_loose_work")}
					.col-md-4
						.card.features.text-centered
							i.fa.fa-dropbox.fa-5x
							|  &nbsp; &nbsp; 
							i.fa.fa-github.fa-5x
							h4 #{translate("sync_to_dropbox_and_github")}
							p #{translate("access_projects_anywhere")}
