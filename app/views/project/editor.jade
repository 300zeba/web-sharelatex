			.navbar-inner
				ul.nav
					li
						a(href='#', data-toggle="tooltip", title="Menu")#leftMenuToggle
							i.fa.fa-bars

				ul.nav.project-name
					li.name
						i.fa.fa-share-alt.share-container(data-toggle="tooltip", title="Share")
