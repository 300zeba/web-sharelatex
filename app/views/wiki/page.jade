extends ../layout

block scripts
	script.
		if (ga) {
			console.log("Google")
			ga('send', 'event', "help", "view")
		}
		if (Intercom) {
			Intercom("trackEvent", "view-help", { title: "#{title}" })
		}

block content
	.content.content-alt(ng-non-bindable)
		.container.wiki
			.row
				.col-xs-3.contents
					| !{contents.content}
				.col-xs-9.page
					.card
						.page-header
							h1 #{title}
							
						| !{page.content}