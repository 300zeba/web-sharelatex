extends ../layout

block content
	.container
		.row
			.span4.offset4
				.page-header
					h1 Login
				.messageArea
				form.form-simple.validate#loginForm(enctype='multipart/form-data', method='post')
					input(name='_csrf', type='hidden', value=csrfToken)
					input(name='redir', type='hidden', value=redir)
					.clearfix
						.input
							input.span4#email.email.required(type='email', autofocus="autofocus", name='email', placeholder='your@email.com')
					.clearfix
						.input
							input.span4#password.required(type='password', name='password', placeholder='********')
					.actions
						button.btn-primary.btn.btn-large#login(type='submit') Login
						a#passwordReset(href='/user/passwordreset') forgot password?
	include ../general/small-footer
