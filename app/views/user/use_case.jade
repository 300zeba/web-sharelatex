extends ../layout

block content
	.content.content-alt
		.container
			.row
				.col-md-8.col-md-offset-2
					.alert.alert-success
						p
							| Thanks for registering!
					.page-header
						span.subdued.pull-right (Final step)
						h2 What do you hope to use DataJoy for?
					form(
						async-form="user-use-case",
						name="useCaseForm"
						action="/user/settings",
						method="POST",
						redir="/project",
						ng-cloak
					)
						input(type="hidden", name="_csrf", value=csrfToken)
						input(type="hidden", name="use_case", ng-value="use_case")
					
						.row
							.col-md-4
								button.card.text-center(
									type='submit',
									ng-click="use_case = 'teacher'"
								)
									i.fa.fa-fw.fa-4x.fa-graduation-cap.text-primary
									p.text-primary
										strong Teaching
									.small To help teach students
							.col-md-4
								button.card.text-center(
									type='submit',
									ng-click="use_case = 'learner'"
								)
									i.fa.fa-fw.fa-4x.fa-book.text-primary
									p.text-primary
										strong Learning
									.small To learn Python and/or R
							.col-md-4
								button.card.text-center(
									type='submit',
									ng-click="use_case = 'researcher'"
								)
									i.fa.fa-fw.fa-4x.fa-flask.text-primary
									p.text-primary
										strong Research
									.small To do my work/research

