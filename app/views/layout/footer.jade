footer
	.container
		.row
			ul.col-md-6
				each item in nav.left_footer
					li
						if item.url
							a(href=item.url) !{item.text}
						else
							| !{item.text}
							
			ul.col-md-6
				each item in nav.right_footer
					li
						if item.url
							a(href=item.url) !{item.text}
						else
							| !{item.text}

